{
    "name": "symkit/form-bundle",
    "description": "Symfony bundle for premium form types (Slug, SitemapPriority, IconPicker, ActiveInactive, FormSection), form extensions (RichSelect, Password, Translatable, Url, Dependency, CheckboxRichSelect), Twig components, Tailwind theme and Stimulus",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Symkit\\FormBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symkit\\FormBundle\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0 || ^8.0",
        "symfony/form": "^7.0 || ^8.0",
        "symfony/string": "^7.0 || ^8.0",
        "symfony/translation": "^7.0 || ^8.0",
        "symfony/ux-icons": "^2.0",
        "symfony/ux-live-component": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "infection/infection": "^0.29",
        "nyholm/symfony-bundle-test": "^3.0",
        "phpro/grumphp": "^2.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "symfony/asset-mapper": "^7.0 || ^8.0",
        "symkit/bundle-ai-kit": "^0.0.6",
        "doctrine/orm": "^3.6",
        "deptrac/deptrac": "^2.0"
    },
    "suggest": {
        "doctrine/orm": "Required for slug uniqueness checks in SlugType and Slug Twig component (^3.6)"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpro/grumphp": true,
            "symkit/bundle-ai-kit": true
        }
    },
    "extra": {
        "bundle-ai-kit": {
            "editors": [
                "cursor",
                "antigravity"
            ],
            "skills": [
                "symfony-bundle-core",
                "symfony-bundle-ux",
                "symfony-bundle-doctrine",
                "symfony-bundle-flex",
                "symfony-bundle-quality"
            ]
        }
    }
}
